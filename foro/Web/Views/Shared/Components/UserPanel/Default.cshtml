@model foro.Domain.Entities.ApplicationUser

<div class="card shadow-sm">
    <div class="card-body text-center">
 @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
       <img src="@Model.FotoPerfil" alt="@Model.NombreCompleto" class="rounded-circle mb-3" style="width: 80px; height: 80px; object-fit: cover;">
        }
        else
     {
            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
           style="width: 80px; height: 80px; font-size: 2rem;">
         @Model.NombreCompleto?.Substring(0, 1).ToUpper()
     </div>
        }

<h5 class="card-title mb-1">@Model.NombreCompleto</h5>
        <p class="text-muted small mb-3">@Model.Email</p>

        @if (!string.IsNullOrEmpty(Model.Biografia))
        {
      <p class="small text-muted fst-italic mb-3">
    "@Model.Biografia"
  </p>
        }

     <div class="d-grid gap-2">
   <a href="#" class="btn btn-sm btn-outline-primary">
           <i class="bi bi-person"></i> Ver Perfil
     </a>
   <a href="#" class="btn btn-sm btn-outline-secondary">
    <i class="bi bi-gear"></i> Configuración
            </a>
        </div>

        <hr class="my-3">

  <div class="row text-center small">
       <div class="col-6">
       <div class="text-muted">Miembro desde</div>
   <div class="fw-bold">@Model.FechaRegistro.ToString("MMM yyyy")</div>
      </div>
         <div class="col-6">
         <div class="text-muted">Estado</div>
       <div>
        @if (Model.Activo)
          {
  <span class="badge bg-success">Activo</span>
       }
      else
       {
   <span class="badge bg-secondary">Inactivo</span>
     }
     </div>
    </div>
   </div>
    </div>
</div>
