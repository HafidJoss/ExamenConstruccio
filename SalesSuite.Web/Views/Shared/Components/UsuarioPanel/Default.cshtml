@model SalesSuite.Domain.Entities.ApplicationUser

<div class="card shadow-sm">
    <div class="card-body text-center">
        <div class="mb-3">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle" width="80" height="80">
            }
            else
            {
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                     style="width: 80px; height: 80px; font-size: 2rem;">
                    @Model.NombreCompleto.Substring(0, 1).ToUpper()
                </div>
            }
        </div>
        <h5 class="card-title mb-1">@Model.NombreCompleto</h5>
        <p class="text-muted small mb-3">@@@Model.UserName</p>
        
        @if (!string.IsNullOrEmpty(Model.Biografia))
        {
            <p class="small text-muted fst-italic mb-3">@Model.Biografia</p>
        }

        <div class="row text-center mb-3">
            <div class="col-6">
                <div class="border-end">
                    <h6 class="text-primary mb-0">@Model.Temas.Count</h6>
                    <small class="text-muted">Temas</small>
                </div>
            </div>
            <div class="col-6">
                <h6 class="text-success mb-0">@Model.Mensajes.Count</h6>
                <small class="text-muted">Mensajes</small>
            </div>
        </div>

        <div class="d-grid gap-2">
            <a asp-controller="Temas" asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i>Crear Tema
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                    <i class="bi bi-box-arrow-right me-1"></i>Cerrar Sesi√≥n
                </button>
            </form>
        </div>
    </div>
    <div class="card-footer text-center small text-muted">
        Miembro desde @Model.FechaRegistro.ToString("MMM yyyy")
    </div>
</div>
