@model IEnumerable<SalesSuite.Web.DTOs.TemaDto>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Temas Recientes</h6>
    </div>
    <div class="list-group list-group-flush">
        @if (Model.Any())
        {
            @foreach (var tema in Model)
            {
                <a asp-controller="Temas" asp-action="Details" asp-route-id="@tema.Id" 
                   class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h6 class="mb-1 text-truncate">
                                @if (tema.Fijado)
                                {
                                    <i class="bi bi-pin-angle-fill text-warning me-1"></i>
                                }
                                @tema.Titulo
                            </h6>
                            <small class="text-muted">
                                <i class="bi bi-folder me-1"></i>@tema.CategoriaNombre
                            </small>
                        </div>
                        <div class="text-end ms-2">
                            <small class="text-muted d-block">
                                <i class="bi bi-eye me-1"></i>@tema.NumeroVistas
                            </small>
                            <small class="text-muted d-block">
                                <i class="bi bi-chat me-1"></i>@tema.NumeroRespuestas
                            </small>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="list-group-item text-center text-muted py-4">
                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                <p class="mb-0">No hay temas recientes</p>
            </div>
        }
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Temas" asp-action="Index" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-list-ul me-1"></i>Ver Todos los Temas
        </a>
    </div>
</div>
