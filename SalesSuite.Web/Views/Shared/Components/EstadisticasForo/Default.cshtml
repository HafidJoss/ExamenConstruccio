@model SalesSuite.Web.ViewComponents.EstadisticasForoViewModel

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Estadísticas del Foro</h6>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded">
                    <h4 class="text-primary mb-0">@Model.TotalTemas</h4>
                    <small class="text-muted">Temas</small>
                </div>
            </div>
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded">
                    <h4 class="text-success mb-0">@Model.TotalMensajes</h4>
                    <small class="text-muted">Mensajes</small>
                </div>
            </div>
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded">
                    <h4 class="text-warning mb-0">@Model.TotalUsuarios</h4>
                    <small class="text-muted">Usuarios</small>
                </div>
            </div>
            <div class="col-6">
                <div class="text-center p-2 bg-light rounded">
                    <h4 class="text-info mb-0">@Model.TotalCategorias</h4>
                    <small class="text-muted">Categorías</small>
                </div>
            </div>
        </div>
        
        @if (Model.TemasHoy > 0 || Model.MensajesHoy > 0)
        {
            <hr class="my-3">
            <div class="text-center">
                <p class="mb-1 small text-muted">Actividad de Hoy</p>
                <span class="badge bg-primary me-2">
                    <i class="bi bi-file-text me-1"></i>@Model.TemasHoy temas
                </span>
                <span class="badge bg-success">
                    <i class="bi bi-chat me-1"></i>@Model.MensajesHoy mensajes
                </span>
            </div>
        }
    </div>
</div>
