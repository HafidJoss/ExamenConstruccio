@model SalesSuite.Web.DTOs.TemaDto

@{
    ViewData["Title"] = "Eliminar Tema";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Encabezado -->
            <div class="mb-4">
                <h1 class="display-6 fw-bold text-danger">
                    <i class="bi bi-trash me-2"></i>Eliminar Tema
                </h1>
                <p class="text-muted">¿Estás seguro de que deseas eliminar este tema?</p>
            </div>

            <!-- Advertencia -->
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                <div>
                    <strong>¡Advertencia!</strong> Esta acción no se puede deshacer. 
                    Se eliminará el tema y todas sus respuestas asociadas.
                </div>
            </div>

            <!-- Información del tema -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Información del Tema
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-hash me-1"></i>ID:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.Id
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-type me-1"></i>Título:
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Titulo</strong>
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-folder me-1"></i>Categoría:
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.CategoriaNombre</span>
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-person me-1"></i>Autor:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.UsuarioNombre
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-calendar3 me-1"></i>Fecha de Creación:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-eye me-1"></i>Vistas:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.NumeroVistas
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-chat-dots me-1"></i>Respuestas:
                        </dt>
                        <dd class="col-sm-9">
                            @Model.NumeroRespuestas
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-chat-text me-1"></i>Contenido:
                        </dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-3 bg-light">
                                @if (Model.Contenido.Length > 300)
                                {
                                    @Model.Contenido.Substring(0, 300)<text>...</text>
                                }
                                else
                                {
                                    @Model.Contenido
                                }
                            </div>
                        </dd>

                        @if (Model.Fijado)
                        {
                            <dt class="col-sm-3 text-muted">
                                <i class="bi bi-pin-angle me-1"></i>Estado:
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-warning text-dark">Fijado</span>
                            </dd>
                        }

                        @if (Model.Cerrado)
                        {
                            <dt class="col-sm-3 text-muted">
                                <i class="bi bi-lock me-1"></i>Estado:
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-secondary">Cerrado</span>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Formulario de confirmación -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Para confirmar la eliminación, haz clic en el botón "Eliminar Tema" a continuación.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>No, volver al listado
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-eye me-2"></i>Ver detalles
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-2"></i>Sí, eliminar tema
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
        }
        .card-header {
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        }
    </style>
}
