@model SalesSuite.Web.DTOs.TemaDto

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Foro
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-route-categoriaId="@Model.CategoriaId" class="text-decoration-none">
                    @Model.CategoriaNombre
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
        </ol>
    </nav>

    <!-- Mensajes de alerta -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-9">
            <!-- Tema principal -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h2 class="h4 mb-2">@Model.Titulo</h2>
                            <div class="d-flex flex-wrap gap-2">
                                @if (Model.Fijado)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-pin-angle-fill"></i> Fijado
                                    </span>
                                }
                                @if (Model.Cerrado)
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-lock-fill"></i> Cerrado
                                    </span>
                                }
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-folder"></i> @Model.CategoriaNombre
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Información del autor -->
                    <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                        <div class="me-3">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; font-size: 1.5rem;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">@Model.UsuarioNombre</h6>
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>
                                @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>

                    <!-- Contenido -->
                    <div class="tema-contenido mb-4">
                        @Model.Contenido
                    </div>

                    <!-- Estadísticas -->
                    <div class="d-flex gap-4 text-muted small border-top pt-3">
                        <span>
                            <i class="bi bi-eye me-1"></i>
                            <strong>@Model.NumeroVistas</strong> vistas
                        </span>
                        <span>
                            <i class="bi bi-chat-dots me-1"></i>
                            <strong>@Model.NumeroRespuestas</strong> respuestas
                        </span>
                        @if (Model.FechaUltimaActividad.HasValue)
                        {
                            <span>
                                <i class="bi bi-clock-history me-1"></i>
                                Última actividad: @Model.FechaUltimaActividad.Value.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        }
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al listado
                        </a>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección de respuestas -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-dots me-2"></i>
                        Respuestas (@Model.NumeroRespuestas)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.NumeroRespuestas > 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            Las respuestas se mostrarán aquí cuando se implemente la funcionalidad de mensajes.
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-chat-square-text display-1"></i>
                            <p class="mt-3 mb-0">Aún no hay respuestas. ¡Sé el primero en comentar!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <!-- Información adicional -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Información
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0 small">
                        <dt class="text-muted">ID del Tema</dt>
                        <dd class="mb-2">#@Model.Id</dd>

                        <dt class="text-muted">Slug</dt>
                        <dd class="mb-2">
                            <code class="small">@Model.Slug</code>
                        </dd>

                        <dt class="text-muted">Categoría</dt>
                        <dd class="mb-2">
                            <a asp-action="Index" asp-route-categoriaId="@Model.CategoriaId" class="text-decoration-none">
                                @Model.CategoriaNombre
                            </a>
                        </dd>

                        <dt class="text-muted">Autor</dt>
                        <dd class="mb-0">@Model.UsuarioNombre</dd>
                    </dl>
                </div>
            </div>

            <!-- Acciones rápidas -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Acciones
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil me-1"></i>Editar tema
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Eliminar tema
                        </a>
                        <hr class="my-2">
                        <a asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Nuevo tema
                        </a>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-list me-1"></i>Ver todos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .tema-contenido {
            line-height: 1.8;
            font-size: 1.05rem;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
        code {
            background-color: #f8f9fa;
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 0.875rem;
        }
    </style>
}
