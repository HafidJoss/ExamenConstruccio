@model SalesSuite.Web.DTOs.CrearTemaDto

@{
    ViewData["Title"] = "Crear Nuevo Tema con Mensaje";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Encabezado -->
            <div class="mb-4">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Tema
                </h1>
                <p class="text-muted">Comparte tus ideas y comienza una nueva conversación</p>
            </div>

            <!-- Formulario -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Título -->
                        <div class="mb-4">
                            <label asp-for="Titulo" class="form-label fw-semibold">
                                <i class="bi bi-type me-1"></i>Título del Tema
                            </label>
                            <input asp-for="Titulo" 
                                   class="form-control form-control-lg" 
                                   placeholder="Escribe un título descriptivo..." 
                                   autofocus />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Elige un título claro y descriptivo (5-200 caracteres)
                            </div>
                        </div>

                        <!-- Categoría -->
                        <div class="mb-4">
                            <label asp-for="CategoriaId" class="form-label fw-semibold">
                                <i class="bi bi-folder me-1"></i>Categoría
                            </label>
                            <select asp-for="CategoriaId" 
                                    class="form-select form-select-lg" 
                                    asp-items="ViewBag.CategoriaId">
                                <option value="">-- Selecciona una categoría --</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Selecciona la categoría más apropiada para tu tema
                            </div>
                        </div>

                        <!-- Contenido del Primer Mensaje -->
                        <div class="mb-4">
                            <label asp-for="ContenidoMensaje" class="form-label fw-semibold">
                                <i class="bi bi-chat-text me-1"></i>Contenido del Primer Mensaje
                            </label>
                            <textarea asp-for="ContenidoMensaje" 
                                      id="contenidoMensaje"
                                      class="form-control" 
                                      rows="10" 
                                      maxlength="5000"
                                      placeholder="Escribe el contenido de tu primer mensaje..."></textarea>
                            <span asp-validation-for="ContenidoMensaje" class="text-danger small"></span>
                            <div class="d-flex justify-content-between">
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Proporciona detalles y contexto (10-5000 caracteres)
                                </div>
                                <div class="form-text" id="charCounter">
                                    <span id="charCount">0</span> / 5000 caracteres
                                </div>
                            </div>
                        </div>

                        <!-- Fijado (solo para administradores/moderadores) -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="Fijado" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       role="switch" />
                                <label asp-for="Fijado" class="form-check-label">
                                    <i class="bi bi-pin-angle me-1"></i>Fijar este tema
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Los temas fijados aparecen primero en el listado
                            </div>
                        </div>

                        <!-- Botón para mostrar vista previa -->
                        <div class="mb-4">
                            <button type="button" class="btn btn-outline-info" id="btnPreview">
                                <i class="bi bi-eye me-2"></i>Vista Previa del Mensaje
                            </button>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Crear Tema
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Vista Previa -->
            <div class="card border-info mt-4" id="previewCard" style="display: none;">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-eye me-2"></i>Vista Previa del Mensaje
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="fw-bold" id="previewTitulo"></h5>
                        <small class="text-muted">
                            <i class="bi bi-folder me-1"></i><span id="previewCategoria"></span>
                        </small>
                    </div>
                    <hr>
                    <div id="previewContenido" class="mensaje-preview"></div>
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnClosePreview">
                        <i class="bi bi-x-circle me-1"></i>Cerrar Vista Previa
                    </button>
                </div>
            </div>

            <!-- Consejos -->
            <div class="card border-info mt-4">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="bi bi-lightbulb me-2"></i>Consejos para crear un buen tema
                    </h6>
                    <ul class="mb-0 small">
                        <li>Usa un título claro y específico</li>
                        <li>Selecciona la categoría correcta</li>
                        <li>Proporciona contexto y detalles suficientes en el primer mensaje</li>
                        <li>Revisa tu ortografía y gramática</li>
                        <li>Sé respetuoso y constructivo</li>
                        <li>El primer mensaje establece el tono de la discusión</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Contador de caracteres
            const contenidoTextarea = $('#contenidoMensaje');
            const charCount = $('#charCount');
            const charCounter = $('#charCounter');

            function updateCharCount() {
                const currentLength = contenidoTextarea.val().length;
                charCount.text(currentLength);
                
                // Cambiar color según el límite
                if (currentLength > 4500) {
                    charCounter.addClass('text-danger').removeClass('text-warning');
                } else if (currentLength > 4000) {
                    charCounter.addClass('text-warning').removeClass('text-danger');
                } else {
                    charCounter.removeClass('text-danger text-warning');
                }
            }

            contenidoTextarea.on('input', updateCharCount);
            updateCharCount(); // Inicializar

            // Vista previa del mensaje
            $('#btnPreview').click(function () {
                const titulo = $('#Titulo').val();
                const contenido = contenidoTextarea.val();
                const categoriaId = $('#CategoriaId').val();
                const categoriaTexto = $('#CategoriaId option:selected').text();

                // Validar que los campos no estén vacíos
                if (!titulo || !contenido || !categoriaId) {
                    alert('Por favor, completa el título, categoría y contenido antes de ver la vista previa.');
                    return;
                }

                // Validar longitud mínima
                if (titulo.length < 5) {
                    alert('El título debe tener al menos 5 caracteres.');
                    return;
                }

                if (contenido.length < 10) {
                    alert('El contenido debe tener al menos 10 caracteres.');
                    return;
                }

                // Mostrar vista previa
                $('#previewTitulo').text(titulo);
                $('#previewCategoria').text(categoriaTexto);
                $('#previewContenido').html(contenido.replace(/\n/g, '<br>'));
                $('#previewCard').slideDown();

                // Scroll suave a la vista previa
                $('html, body').animate({
                    scrollTop: $('#previewCard').offset().top - 20
                }, 500);
            });

            // Cerrar vista previa
            $('#btnClosePreview').click(function () {
                $('#previewCard').slideUp();
            });

            // Validación adicional antes de enviar
            $('form').submit(function (e) {
                const titulo = $('#Titulo').val().trim();
                const contenido = contenidoTextarea.val().trim();
                const categoriaId = $('#CategoriaId').val();

                let errores = [];

                // Validar título
                if (!titulo) {
                    errores.push('El título es obligatorio.');
                } else if (titulo.length < 5) {
                    errores.push('El título debe tener al menos 5 caracteres.');
                } else if (titulo.length > 200) {
                    errores.push('El título no puede exceder 200 caracteres.');
                }

                // Validar contenido
                if (!contenido) {
                    errores.push('El contenido del mensaje es obligatorio.');
                } else if (contenido.length < 10) {
                    errores.push('El contenido debe tener al menos 10 caracteres.');
                } else if (contenido.length > 5000) {
                    errores.push('El contenido no puede exceder 5000 caracteres.');
                }

                // Validar categoría
                if (!categoriaId) {
                    errores.push('Debe seleccionar una categoría.');
                }

                // Mostrar errores si existen
                if (errores.length > 0) {
                    e.preventDefault();
                    let mensajeError = 'Por favor, corrija los siguientes errores:\n\n';
                    errores.forEach(function (error, index) {
                        mensajeError += (index + 1) + '. ' + error + '\n';
                    });
                    alert(mensajeError);
                    return false;
                }

                // Deshabilitar botón de envío para evitar doble submit
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<span class="spinner-border spinner-border-sm me-2"></span>Creando tema...');

                return true;
            });

            // Prevenir pérdida de datos
            let formModified = false;
            $('input, textarea, select').on('change input', function () {
                formModified = true;
            });

            $(window).on('beforeunload', function () {
                if (formModified) {
                    return '¿Estás seguro de que deseas salir? Los cambios no guardados se perderán.';
                }
            });

            $('form').on('submit', function () {
                formModified = false;
            });
        });
    </script>
}

@section Styles {
    <style>
        .mensaje-preview {
            white-space: pre-wrap;
            word-wrap: break-word;
            line-height: 1.6;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 0.375rem;
        }

        #charCounter {
            font-weight: 600;
            transition: color 0.3s ease;
        }

        #previewCard {
            animation: slideDown 0.3s ease;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }       
        }

    </style>
}
