@model SalesSuite.Web.DTOs.TemaEditDto

@{
    ViewData["Title"] = "Editar Tema";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Encabezado -->
            <div class="mb-4">
                <h1 class="display-6 fw-bold text-warning">
                    <i class="bi bi-pencil-square me-2"></i>Editar Tema
                </h1>
                <p class="text-muted">Modifica la información de tu tema</p>
            </div>

            <!-- Formulario -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Título -->
                        <div class="mb-4">
                            <label asp-for="Titulo" class="form-label fw-semibold">
                                <i class="bi bi-type me-1"></i>Título del Tema
                            </label>
                            <input asp-for="Titulo" 
                                   class="form-control form-control-lg" 
                                   placeholder="Escribe un título descriptivo..." 
                                   autofocus />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>

                        <!-- Categoría -->
                        <div class="mb-4">
                            <label asp-for="CategoriaId" class="form-label fw-semibold">
                                <i class="bi bi-folder me-1"></i>Categoría
                            </label>
                            <select asp-for="CategoriaId" 
                                    class="form-select form-select-lg" 
                                    asp-items="ViewBag.CategoriaId">
                                <option value="">-- Selecciona una categoría --</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                        </div>

                        <!-- Contenido -->
                        <div class="mb-4">
                            <label asp-for="Contenido" class="form-label fw-semibold">
                                <i class="bi bi-chat-text me-1"></i>Contenido
                            </label>
                            <textarea asp-for="Contenido" 
                                      class="form-control" 
                                      rows="10" 
                                      placeholder="Describe tu tema con detalle..."></textarea>
                            <span asp-validation-for="Contenido" class="text-danger small"></span>
                        </div>

                        <!-- Opciones -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="Cerrado" 
                                           class="form-check-input" 
                                           type="checkbox" 
                                           role="switch" />
                                    <label asp-for="Cerrado" class="form-check-label">
                                        <i class="bi bi-lock me-1"></i>Cerrar tema
                                    </label>
                                </div>
                                <div class="form-text small">
                                    Los temas cerrados no permiten nuevas respuestas
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="Fijado" 
                                           class="form-check-input" 
                                           type="checkbox" 
                                           role="switch" />
                                    <label asp-for="Fijado" class="form-check-label">
                                        <i class="bi bi-pin-angle me-1"></i>Fijar tema
                                    </label>
                                </div>
                                <div class="form-text small">
                                    Los temas fijados aparecen primero
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-white">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Advertencia -->
            <div class="alert alert-warning mt-4" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Nota:</strong> Los cambios realizados serán visibles para todos los usuarios del foro.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
